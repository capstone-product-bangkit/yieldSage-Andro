<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/item_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/ageAverage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age Average :"
            android:textSize="16sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/item_photo"/>

        <TextView
            android:id="@+id/treeCount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tree Count :"
            android:textSize="16sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/ageAverage_text"/>

        <TextView
            android:id="@+id/totalYield_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Yield :"
            android:textSize="16sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/treeCount_text"/>

        <TextView
            android:id="@+id/cpaAverage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPA Average :"
            android:textSize="16sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/totalYield_text"/>

        <TextView
            android:id="@+id/ageAverage_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toEndOf="@id/cpaAverage_text"
            card_view:layout_constraintTop_toTopOf="@id/ageAverage_text"
            card_view:layout_constraintBottom_toBottomOf="@id/ageAverage_text"/>

        <TextView
            android:id="@+id/treeCount_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toEndOf="@id/treeCount_text"
            card_view:layout_constraintTop_toTopOf="@id/treeCount_text"
            card_view:layout_constraintBottom_toBottomOf="@id/treeCount_text"/>

        <TextView
            android:id="@+id/totalYield_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toEndOf="@id/totalYield_text"
            card_view:layout_constraintTop_toTopOf="@id/totalYield_text"
            card_view:layout_constraintBottom_toBottomOf="@id/totalYield_text"/>

        <TextView
            android:id="@+id/cpaAverage_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toEndOf="@id/cpaAverage_text"
            card_view:layout_constraintTop_toTopOf="@id/cpaAverage_text"
            card_view:layout_constraintBottom_toBottomOf="@id/cpaAverage_text"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>